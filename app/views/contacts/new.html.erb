<% @body_id = 'contact_us' %>
<div id="contact-us">
  <h1><%= t("contact_us") %></h1>
  <%= hook :contact do %>
  <%= render "shared/error_messages", :target => @contact %>
  <%= form_for(@contact, :html => {:honeypot => true}) do |f| %>
    <%= hook :contact_inside_form do %>
    <div class="field">
       <%= f.label :topic_id, t("topic") %>
       <%= f.collection_select :topic_id, @topics, :id, :name %>
    </div>
    <div class="field">
      <%= f.label :name, t("name") %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email, t("email") %>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :order_number, t("order_number") + "(" + t("optionnal") + ")" %>
      <%= f.text_field :order_number %>
    </div>
    <div class="field">
      <%= f.label :message, t("message") %>
      <%= f.text_area :message %>
    </div>
    <div class="action"><%= f.submit t("send_message"), :class => "button primary" %></div>
    <% end %>
  <% end %>
  <% end %>
</div>

<% content_for :sidebar do %>
  <%= render :partial => "shared/taxonomies" %>
<% end %>
